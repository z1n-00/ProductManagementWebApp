@model IEnumerable<ProductManagement.Domain.Entities.Product>
@{
    ViewData["Title"] = "Products";
    var counter = 1;
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Products</h2>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">
            <i class="bi bi-plus-circle me-1"></i> Add Product
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-bordered table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="width: 60px;">No.</th>
                            <th>Name</th>
                            <th class="text-end">Price</th>
                            <th>Created Date</th>
                            <th style="width: 180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@p.Name</td>
                                <td class="text-end">@p.Price.ToString("C")</td>
                                <td>@p.CreatedDate</td>
                                <td>
                                    <div class="d-flex gap-3">
                                        <a class="btn btn-sm btn-warning" asp-controller="Product" asp-action="Edit" asp-route-id="@p.Id">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a class="btn btn-sm btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@p.Id">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(ViewBag.PageNumber - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.PageNumber == i ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.PageNumber == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(ViewBag.PageNumber + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>