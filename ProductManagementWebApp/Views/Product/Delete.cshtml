@model ProductManagement.Domain.Entities.Product
@{
    ViewData["Title"] = "Delete Product";
}
<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <h2 class="text-danger mb-3">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Product
            </h2>
            <p class="fs-5">
                Are you sure you want to delete <strong class="text-dark">@Model.Name</strong>?
            </p>
            <p class="text-muted">This action cannot be undone.</p>

            <form method="post" class="pt-3 d-flex gap-2">
                <button type="submit" class="btn btn-danger" asp-controller="Product" asp-action="Delete">
                    <i class="bi bi-trash me-1"></i> Yes, Delete
                </button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>